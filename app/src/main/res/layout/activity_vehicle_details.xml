<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".VehicleDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="5px"
            android:background="@drawable/linearlayoutbox"
            android:orientation="vertical"
            android:padding="15px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Vehicle Details"
                android:textColor="#FF03A9F4"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="5px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="5px"
            android:background="@drawable/linearlayoutbox"
            android:orientation="vertical"
            android:padding="15px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="Basic Details"
                android:textColor="#FF03A9F4"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#FF03A9F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Vehiclename"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="15px"
                    android:layout_weight="1"
                    android:text="Vehicle Name"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Modelnumber"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="15px"
                    android:layout_weight="1"
                    android:text="Model Number"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/vehiclename"
                    android:layout_width="50px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="15px"
                    android:layout_weight="1"
                    android:backgroundTint="#03A9F4"
                    android:inputType="textPersonName"
                    android:paddingBottom="20px"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/modelnumber"
                    android:layout_width="50px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="15px"
                    android:layout_weight="1"
                    android:backgroundTint="#03A9F4"
                    android:inputType="textPersonName"
                    android:paddingBottom="20px"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Vehicleclass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15px"
                    android:background="@drawable/textbox"
                    android:text="Class"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/vehicleclass"
                    android:layout_width="match_parent"
                    android:layout_height="76px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginBottom="15px"
                    android:background="@drawable/editbox"
                    android:entries="@array/vehicle_class"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="5px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="5px"
            android:background="@drawable/linearlayoutbox"
            android:orientation="vertical"
            android:padding="15px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="Additional Details"
                android:textColor="#FF03A9F4"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#FF03A9F4" />

            <LinearLayout
                android:id="@+id/Additional_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Mileage"
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_margin="15px"
                        android:layout_weight="1"
                        android:background="@drawable/textbox"
                        android:text="Mileage"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Power"
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_margin="15px"
                        android:layout_weight="1"
                        android:background="@drawable/textbox"
                        android:text="Power"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/mileage"
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30px"
                        android:layout_marginBottom="15px"
                        android:layout_weight="1"
                        android:backgroundTint="#03A9F4"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:paddingBottom="20px"
                        android:text="0"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/power"
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:layout_marginRight="30px"
                        android:layout_marginBottom="15px"
                        android:layout_weight="1"
                        android:backgroundTint="#03A9F4"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:paddingBottom="20px"
                        android:text="0"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/additional_info"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/Seats"
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_margin="15px"
                        android:layout_weight="1"
                        android:background="@drawable/textbox"
                        android:text="Seats"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/AC"
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_margin="15px"
                        android:layout_weight="1"
                        android:background="@drawable/textbox"
                        android:text="AC"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/seats"
                        android:layout_width="90px"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15px"
                        android:layout_marginBottom="15px"
                        android:layout_marginLeft="15px"
                        android:layout_weight="1"
                        android:backgroundTint="#03A9F4"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:paddingBottom="20px"
                        android:text="0"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/ac"
                        android:layout_width="110px"
                        android:layout_height="wrap_content"
                        android:layout_margin="15px"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/ayes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YES" />

                        <RadioButton
                            android:id="@+id/ano"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:text="NO" />

                    </RadioGroup>

                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Fuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15px"
                        android:background="@drawable/textbox"
                        android:text="Fuel"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/fuel"
                        android:layout_width="match_parent"
                        android:layout_height="76px"
                        android:layout_marginLeft="15px"
                        android:layout_marginRight="15px"
                        android:layout_marginBottom="15px"
                        android:background="@drawable/editbox"
                        android:entries="@array/fuel" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="5px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="5px"
            android:background="@drawable/linearlayoutbox"
            android:orientation="vertical"
            android:padding="15px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="Agreement Details"
                android:textColor="#FF03A9F4"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#FF03A9F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/DespositAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15px"
                    android:layout_weight="1"
                    android:background="@drawable/textbox"
                    android:text="Deposit Amount"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="45px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.001"
                        android:layout_marginLeft="15px"
                        android:layout_marginBottom="15px"
                        android:text="₹ :"
                        android:textSize="16sp"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/despositAmount"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="15px"
                        android:paddingBottom="20px"
                        android:text="0"
                        android:textSize="16sp"
                        android:backgroundTint="#03A9F4"
                        android:inputType="numberDecimal" />

                    <CheckBox
                        android:id="@+id/RefundableDeposit"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="15px"
                        android:layout_marginBottom="15px"
                        android:layout_weight="1"
                        android:text="Refundable Deposit" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15px"
                    android:background="@drawable/textbox"
                    android:text="Payment"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:layout_marginBottom="15px"
                        android:text="₹ :"
                        android:textSize="16sp"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/payment"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="25px"
                        android:layout_marginBottom="15px"
                        android:paddingBottom="20px"
                        android:text="0"
                        android:backgroundTint="#03A9F4"
                        android:inputType="numberDecimal" />

                    <Spinner
                        android:id="@+id/payment_time_period"
                        android:layout_width="110px"
                        android:layout_height="82px"
                        android:layout_weight="1"
                        android:layout_marginLeft="25px"
                        android:layout_marginRight="15px"
                        android:layout_marginBottom="15px"
                        android:background="@drawable/editbox"
                        android:entries="@array/vehicle_time_period" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="5px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="5px"
            android:background="@drawable/linearlayoutbox"
            android:orientation="vertical"
            android:padding="15px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="Advanced Clauses"
                android:textColor="#FF03A9F4"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#FF03A9F4" />

            <LinearLayout
                android:id="@+id/Clause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <ImageView
                android:id="@+id/add_clauses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="900px"
                android:layout_marginTop="15px"
                android:layout_marginRight="15px"
                android:layout_marginBottom="15px"
                android:src="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="5px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="5px"
            android:background="@drawable/linearlayoutbox"
            android:orientation="vertical"
            android:padding="15px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="Vehicle Photo"
                android:textColor="#FF03A9F4"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:background="#FF03A9F4" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/vehicle_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>

            <ImageView
                android:id="@+id/add_vehicle_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="900px"
                android:layout_marginTop="15px"
                android:layout_marginRight="15px"
                android:layout_marginBottom="15px"
                android:src="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="5px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="25px"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="Save and Next"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>