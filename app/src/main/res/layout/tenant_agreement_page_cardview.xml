<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10px"
            android:orientation="vertical"
            android:background="@drawable/linearlayoutbox">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sub_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginTop="15px"
                android:text="Property Details"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                android:textColor="#FF03A9F4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="#FF03A9F4"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10px" >

                <TextView
                    android:id="@+id/Property_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :  " />

                <TextView
                    android:id="@+id/property_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10px" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property :  " />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area(Sq.ft) :  " />

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10px" >

                <TextView
                    android:id="@+id/applicance_furniture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applicance/Furniture :  "
                    android:background="@null" />

                <LinearLayout
                    android:id="@+id/Applicance_Furniture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10px" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration :  "
                        android:background="@null" />

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15px"
                        android:background="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposit :  ₹ "
                        android:background="@null" />

                    <TextView
                        android:id="@+id/deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10px" >

                <TextView
                    android:id="@+id/clauses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clauses :  "
                    android:background="@null" />

                <LinearLayout
                    android:id="@+id/Clauses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10px" >

                <TextView
                    android:id="@+id/Rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent :  ₹ " />

                <TextView
                    android:id="@+id/rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginTop="15px"
                    android:text="Landlord Details"
                    android:textSize="12sp"
                    android:textStyle="bold|italic"
                    android:textColor="#FF03A9F4" />

                <ImageView
                    android:id="@+id/landord_details_image"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:layout_marginLeft="662px"
                    android:layout_marginRight="15px"
                    android:src="@drawable/down_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="#FF03A9F4"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px" />

            <LinearLayout
                android:id="@+id/landord_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10px" >

                    <TextView
                        android:id="@+id/Landlord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Landlord :  " />

                    <TextView
                        android:id="@+id/landlord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10px" >

                    <TextView
                        android:id="@+id/Landlord_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address :  " />

                    <TextView
                        android:id="@+id/landlord_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="700px"
                    android:layout_height="wrap_content"
                    android:layout_margin="10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Phone"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone :  " />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="60px"
                        android:layout_marginLeft="50px"
                        android:layout_weight="1"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/Age"
                        android:layout_width="96px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="Age :  " />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:background="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10px" >

                    <TextView
                        android:id="@+id/Occupation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Occupation :  " />

                    <TextView
                        android:id="@+id/occupation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15px" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:layout_marginRight="15px"
                        android:layout_marginTop="15px"
                        android:text="Status"
                        android:textSize="12sp"
                        android:textStyle="bold|italic"
                        android:textColor="#FF03A9F4" />

                    <ImageView
                        android:id="@+id/statusimage"
                        android:layout_width="wrap_content"
                        android:layout_height="80px"
                        android:layout_marginLeft="800px"
                        android:layout_marginRight="15px"
                        android:src="@drawable/down_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4px"
                    android:background="#FF03A9F4"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10px" >

                    <ImageView
                        android:id="@+id/status1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Legal Documents Collected From Landlord And \n\tVerified" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10px" >

                    <ImageView
                        android:id="@+id/status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Legal Documents Collected From Tenant And Verified" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10px" >

                    <ImageView
                        android:id="@+id/status3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Stamp Duty And Registration Is Formed" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10px" >

                    <ImageView
                        android:id="@+id/status4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Agreement Is Formed" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:visibility="gone"
                android:background="#FF03A9F4"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px" />

            <TextView
                android:id="@+id/AgreementStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agreement In Progress"
                android:textColor="#0f0"
                android:gravity="center"/>

            <TextView
                android:id="@+id/AgreementDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0f0"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="#FF03A9F4"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginTop="15px"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>