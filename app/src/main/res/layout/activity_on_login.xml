<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OnLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/AddResidence"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_margin="30px"
            android:background="#FF03A9F4" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Add Residence"
                android:textSize="20sp"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/BookResidence"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_margin="30px"
            android:background="#FF03A9F4" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Book Residence"
                android:textSize="20sp"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/AddVehicle"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_margin="30px"
            android:background="#FF03A9F4" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Add Vehicle"
                android:textSize="20sp"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/BookVehicle"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_margin="30px"
            android:background="#FF03A9F4" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Book Vehicle"
                android:textSize="20sp"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@menu/navigation_header" >

        <ExpandableListView
            android:id="@+id/expandable_listview"
            android:layout_marginTop="550px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:groupIndicator="@null" />

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>