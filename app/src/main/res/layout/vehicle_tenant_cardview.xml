<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10px"
            android:orientation="vertical"
            android:background="@drawable/linearlayoutbox">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sub_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle :  "
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maruti Suzuki Ciaz"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/VehicleClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class :  "
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/vehicleclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Economy Car"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10px" >

                <LinearLayout
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Mileage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mileage : "
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/mileage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/mileageId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  kmpl"
                        android:textColor="#000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="100px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Power : "
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="103"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/powerId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  hp"
                        android:textColor="#000" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10px" >

                <LinearLayout
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposit :  ₹ "
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:textColor="#000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="100px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Rent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rent :  ₹ "
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/rent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000/day"
                        android:textColor="#000" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:src="@drawable/seats" />

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:src="@drawable/fuel" />

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:src="@drawable/ac" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seats"
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4 seats"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/fuel"
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Petrol"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/ac"
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Available"
                    android:textColor="#000" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  " />

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="500px"
                    android:layout_height="465px"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:src="@drawable/nm"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10px" >

                        <TextView
                            android:id="@+id/Owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Owner :  "
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jethalal Champaklal Gada"
                            android:textColor="#000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10px" >

                        <TextView
                            android:id="@+id/Landlord_Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address :  "
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#101 1, Powder Galli, Goregaon East, Mumbai-400004, Mumbai, Maharashtra"
                            android:textColor="#000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10px" >

                        <TextView
                            android:id="@+id/Phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone :  "
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9876543210"
                            android:textColor="#000" />

                        <ImageView
                            android:id="@+id/call"
                            android:layout_width="wrap_content"
                            android:layout_height="60px"
                            android:src="@drawable/call" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10px">

                        <TextView
                            android:id="@+id/Age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age :  "
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="51"
                            android:textColor="#000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10px">

                        <TextView
                            android:id="@+id/Occupation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occupation :  "
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/occupation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student"
                            android:textColor="#000" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/request"
                    android:layout_width="100px"
                    android:layout_height="60px"
                    android:layout_weight="1"
                    android:layout_margin="10px"
                    android:background="@drawable/button"
                    android:text="Request"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>